<div class="row articles no-gutters">
  <% obj.each do |article| %>
  <div class="col-sm-6 col-md-3">

    <div class="card">
      <div class="card-body">
        <%= image_tag url_for(article.image), class: "card-image" %>
      </div>
    </div>
  </div>
  <div class="col-sm-6 col-md-3">
    <div class="card">
      <div class="card-body card-2">
        <% if obj == @category_articles %>
        <h4 class="card-title">
          <%= @category.name%>
        </h4>
        <% end %>
        <h4 class="card-title"><%= link_to article.title, article_path(article), class: "title-1" %></h4>

        <p class="card-text"><%= truncate(article.text, length: 30) %></p>
        <p class="card-text">
          Created by: <%= article.user.username if article.user%>
        </p>
        <% if logged_in?%>
        <% if article.categories.any? %>

        <p class="card-category">Category: <%= render article.categories %></p>

        <% end %>
        <span class="like"><%= article.votes.count %> <%= (article.votes.count) == 1 ? 'Like' : 'Likes'%>
          <% pre_like = article.votes.find { |like| like.user_id == current_user.id} %>
          <% if pre_like %>
          <%= button_to 'Unlike', article_vote_path(article, pre_like), method: :delete %>
          <% else %>
          <%= button_to 'Like', article_votes_path(article), method: :post %>
          <% end %>
        </span>
        <% end %>
        <% if logged_in? && current_user == article.user %>
        <div class="link">
          <%= link_to "Edit", edit_article_path(article), class: "card-link" %>

          <%= link_to "Delete", article_path(article),
               method: :delete,
               data: { confirm: "Are you sure you want to delete the article?"},
               class: "card-link" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
  <% end %>
</div>