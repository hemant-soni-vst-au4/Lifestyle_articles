<div class="container-fluid">
  <div class=" signup-login-forms">
    <div class="form-contents">
      <div class="login-html">
        <div class="login-form">
          <div class="sign-up-form">
            <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
            <%= render 'shared/errors', obj: @article %>
            <h1 class="headline">New Article</h1>
            <div class="group">
              <%= f.label :title, class: 'label'%>
              <%= f.text_field :title, class: "input"%>
            </div>

            <div class="group">
              <%= f.label :image, class: 'label'%>
              <%= f.file_field :image, class: "input"%>
            </div>

            <div class="group">
              <%= f.label :description, class: 'label'%>
              <%= f.text_area :text, class: "input"%>
            </div>
            <div class="group">
              <p>Categories:</p> <%= f.collection_check_boxes :category_ids, Category.all, :id, :name  %>
            </div>

            <div class="group">
              <%= f.submit "Create", class: "button", id: "register" %>
            </div>
            <div class="group">
              <%= link_to 'Cancel', articles_path, class: "button text-center", id: "register"  %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>