<div class="signup-login-forms">
  <div class="form-contents">
    <div class="login-html">
      <%= link_to "Log In", login_path, class: "sign-in tab active"%>
      <%= link_to "Register", signup_path, class: "sign-up tab"%>
      <div class="login-form">
        <div class="sign-in-form">
          <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

          <div class="group">
            <%= f.label :email, class: 'label'%>
            <%= f.text_field :email, class: "input"%>
          </div>

          <div class="group">
            <%= f.label :password, class: 'label'%>
            <%= f.password_field :password, class: "input"%>
          </div>

          <div class="group">
            <input id="check" type="checkbox" class="check" checked>
            <label for="check"><span class="icon"></span> Keep me Signed in</label>
          </div>
          <div class="group">
            <%= f.submit "Log In", class: "button" %>
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>