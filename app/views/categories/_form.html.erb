<div class=" signup-login-forms">
  <div class="form-contents">
    <div class="login-html">
      <div class="login-form">
        <div class="sign-up-form">


          <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |f| %>
          <%= render 'shared/errors', obj: @category %>
          <div class="group">
            <%= f.label :name, class: 'label'%>
            <%= f.text_field :name, class: "input"%>
          </div>

          <div class="group">
            <%= f.submit "Create", class: "button", id: "register" %>
          </div>
          <div class="group">
            <%= link_to 'Cancel', articles_path, class: "button text-center", id: "register"  %>
          </div>

          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>