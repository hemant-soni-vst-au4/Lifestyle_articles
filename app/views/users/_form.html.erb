<div class="signup-login-forms">
  <div class="form-contents">
    <div class="login-html">
      <%= link_to "Log In", login_path, class: "sign-in tab"%>
      <%= link_to "Register", signup_path, class: "sign-up tab active"%>
      <div class="login-form">
        <div class="sign-up-form">
          <%= form_with(model: user, local: true) do |f| %>
          <%= render 'shared/errors', obj: user%>

          <div class="group">
            <%= f.label :username, class: 'label'%>
            <%= f.text_field :username, class: "input"%>
          </div>

          <div class="group">
            <%= f.label :email, class: 'label'%>
            <%= f.email_field :email, class: "input"%>
          </div>

          <div class="group">
            <%= f.label :password, class: 'label'%>
            <%= f.password_field :password, class: "input"%>
          </div>

          <div class="group">
            <%= f.submit "Register", class: "button", id: "register" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>